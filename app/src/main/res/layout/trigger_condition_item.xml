<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_linear_layout_tc"
    android:layout_width="match_parent"
    android:layout_height="80sp"
    android:orientation="horizontal"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/main_linerar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#666">

        <ImageView
            android:id="@+id/tc_image"
            android:layout_margin="1.5sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="#FFF"
            android:layout_weight="2"/>

        <LinearLayout
            android:layout_margin="1.5sp"
            android:id="@+id/tc_info_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#FFF"
            android:layout_weight="1">

            <TextView
                android:id="@+id/sensor_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/metric_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:textSize="20dp"
                android:layout_weight="0.7"/>

        </LinearLayout>


        <TextView
            android:id="@+id/tc_condtion"
            android:layout_margin="1.5sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFF"
            android:layout_weight="2"
            android:padding="20sp"
             />#

    </LinearLayout>

</LinearLayout>