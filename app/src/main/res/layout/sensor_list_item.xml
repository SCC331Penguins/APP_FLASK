<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="140sp"
    android:orientation="horizontal"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/main_linerar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#666">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:background="#666">

            <ImageView
                android:id="@+id/sensor_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1.5sp"
                android:layout_weight="3"
                android:background="#FFF"
                android:padding="10dp"
                android:src="@drawable/router" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1.5sp"
                android:layout_weight="1"
                android:background="#FFF"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_sensor_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:paddingTop="2dp"
                    android:text="13212482139932421"/>

                <TextView
                    android:id="@+id/text_sensor_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:paddingLeft="10dp"
                    android:text="Zone 1 Sensor"
                    android:textSize="20dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#666"
                android:layout_weight="0"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">


                <TextView
                    android:id="@+id/sensor_1"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="LIGHT"
                    android:textSize="12sp"
                    android:background="#FFFFFF"
                    android:textAlignment="center"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:id="@+id/sensor_status_1"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="#00FF00"/>

            </LinearLayout>

            <ImageView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#666"
                android:layout_weight="0"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/sensor_2"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:text="HUMID"
                    android:textSize="12sp"
                    android:background="#FFFFFF"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:id="@+id/sensor_status_2"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="#00FF00"/>

            </LinearLayout>

            <ImageView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#666"
                android:layout_weight="0"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/sensor_4"
                    android:layout_width="match_parent"
                    android:background="#FFFFFF"
                    android:textAlignment="center"
                    android:text="TEMP"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:id="@+id/sensor_status_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#00FF00"/>

            </LinearLayout>

            <ImageView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#666"
                android:layout_weight="0"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/sensor_8"
                    android:layout_width="match_parent"
                    android:background="#FFFFFF"
                    android:textAlignment="center"
                    android:text="SOUND"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:id="@+id/sensor_status_8"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="#666"/>

            </LinearLayout>

            <ImageView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#666"
                android:layout_weight="0"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/sensor_16"
                    android:background="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="MOVE"
                    android:textSize="12sp"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:id="@+id/sensor_status_16"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="#00FF00"/>

            </LinearLayout>

            <ImageView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#666"
                android:layout_weight="0"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/sensor_32"
                    android:background="#FFFFFF"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:text="TILT"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:id="@+id/sensor_status_32"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="#00FF00"/>

            </LinearLayout>

            <ImageView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#666"
                android:layout_weight="0"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/sensor_64"
                    android:background="#FFFFFF"

                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="UV"
                    android:textSize="12sp"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:id="@+id/sensor_status_64"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="#00FF00"/>

            </LinearLayout>

            <ImageView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#666"
                android:layout_weight="0"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/sensor_128"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:textAlignment="center"
                    android:text="IR"
                    android:textSize="12sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:id="@+id/sensor_status_128"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00FF00"/>

            </LinearLayout>

            <ImageView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#666"
                android:layout_weight="0"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="0"/>

    </LinearLayout>

</LinearLayout>